// Import all partials
@require './_*.styl'

.page-wrapper
  background-image: url(../images/pizza.jpg)
  background-repeat no-repeat
  background-size cover
  width 100vw
  height 100vh
  position relative

.header
  font-size 60px
  font-weight bold
  text-align center
  text-transform uppercase
  color: white

.card
  background-color white
  width 300px
  height 300px
  position: absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.card__caption
  padding 6px
  font-size 25px

.card__picture
  background-image url("../images/pizza-sketch.PNG")
  background-repeat no-repeat
  background-size cover
  width 160px
  height 160px
  position: absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)