// Import all partials
@require './_*.styl'

.page-wrapper
  background-image: url(../images/pizza.jpg)
  background-repeat no-repeat
  background-size cover
  width 100vw
  height 100vh
  position relative

.header
  font-size 60px
  font-weight bold
  text-align center
  text-transform uppercase
  color: white

.card
  background-color white
  width 300px
  height 300px
  position: absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  display flex
  flex-direction column
  justify-content flex-end
  align-items center
  transition all 0.3s
  &:hover
    box-shadow 5px 5px 10px rgba(255,255,255,0.75), -5px -5px 10px rgba(255,255,255,0.75)
    cursor pointer

.card__caption
  padding-bottom 10px
  font-size 25px
  transition all 0.1s
  &:hover
    text-shadow 4px 4px 8px rgba(0,0,0,0.75)



.card__picture
  background-image url("../images/pizza-sketch.PNG")
  background-repeat no-repeat
  background-size cover
  width 160px
  height 160px
  position: absolute
  top 50%
  left 50%
  transform translate(-50%, -60%)
