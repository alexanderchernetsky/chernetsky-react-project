// Import all partials
@require './_*.styl'

.page-wrapper
  background-image: url(../images/pizza.jpg)
  background-repeat no-repeat
  background-size cover
  width 100vw
  height 100vh
  position relative
  box-sizing border-box
  padding 1px // to prevent margin collapsing

.header
  font-family 'Roboto', sans-serif
  font-size 60px
  font-weight bold
  text-align center
  text-transform uppercase
  color: white

.card
  font-family 'Roboto Condensed', sans-serif
  background-color white
  width 300px
  height 300px
  position: absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  display flex
  flex-direction column
  justify-content flex-end
  align-items center
  transition all 0.3s
  &:hover
    box-shadow 5px 5px 10px rgba(255,255,255,0.75), -5px -5px 10px rgba(255,255,255,0.75)
    cursor pointer

.card__caption
  padding-bottom 10px
  font-size 25px
  transition all 0.1s
  &:hover
    text-shadow 4px 4px 8px rgba(0,0,0,0.75)


.card__picture
  background-image url("../images/pizza-sketch.PNG")
  background-repeat no-repeat
  background-size cover
  width 160px
  height 160px
  position: absolute
  top 50%
  left 50%
  transform translate(-50%, -60%)

.store-wrapper
  display flex
  flex-direction row
  justify-content center
  flex-wrap wrap
  height 90vh
  max-width 1500px
  margin 30px auto

.store-division
  flex 1 1 30%
  background #fff
  border 10px double #1a1a1a
  min-width 300px
  box-sizing border-box
  padding 10px
  overflow-y scroll
  overflow-x hidden

.store-division__header
  font-family 'Roboto', sans-serif
  font-size 30px
  font-weight bold
  text-align center

.addDishForm
  width 100%
  border 2px solid black
  box-sizing border-box
  margin 5px 0
  display flex
  flex-direction row
  flex-wrap wrap

.addDishForm__textarea,
.addDishForm__input--big,
.addDishForm__button--big,
.addDishForm__input--small,
.addDishForm__select,
.addDishForm__prompt
  padding 10px
  border 0
  border-bottom 1px solid black
  border-right 1px solid black
  box-sizing border-box
  &:focus
    background-color lightyellow


.addDishForm__input--small,
.addDishForm__select
  width 33.33%

.addDishForm__textarea,
.addDishForm__input--big,
.addDishForm__button--big,
.load__button, .addDishForm__prompt
  width 100%

.addDishForm__button--big, .addDishForm__prompt
  font-family 'Roboto', sans-serif

.addDishForm__prompt
  color red

.addDishForm__textarea
  resize vertical
  overflow hidden

.addDishForm__button--big,
.dish-addButton,
.order__confirm, .order__delete,
.load__button, .logout__button
  background none
  text-transform uppercase
  font-weight bold
  padding 5px
  transition all 0.2s
  position relative
  z-index 2
  border 1px solid black
  &:hover
    color white
    cursor pointer
    &:after
      height 100%
  &:after
    content ""
    z-index -1
    display block
    background #000
    position absolute
    width 100%
    height 0
    left 0
    top 0
    -webkit-transition all .2s
    transition all .2s

.dish-image
  width 100px
  height 100px
  padding-right 5px
  object-fit cover
  float left

.dish
  box-sizing border-box
  padding 10px
  margin 5px 0
  border 1px solid black
  &:after
    content ''
    clear both
    display block

.dish-header
  font-family 'Roboto', sans-serif
  font-weight bold
  font-size 20px

.dish-price
  float right

.dish-addButton
  font-family 'Roboto', sans-serif

.dish-addButton[disabled]
  font-family 'Roboto', sans-serif
  cursor not-allowed
  color: red
  border 1px solid red
  font-size 20px
  transform rotate(-20deg) translate(40px, -15px)
  background white
  &:after
    content none

.dish-description
  font-family 'Roboto Condensed', sans-serif

.order__delete
  padding 0
  width 15px
  height 15px
  margin-left 4px

.order__total
  font-family 'Roboto Condensed', sans-serif
  font-weight bold
  font-size 20px

.order__count, .order__price
  padding 0 4px
  display inline-block

.order__item
  font-family 'Roboto Condensed', sans-serif
  padding 10px 0
  border-bottom 1px solid black

.order__count-wrapper
  position relative
  overflow hidden
  float left

.order__confirm
  font-family 'Roboto', sans-serif

.login__paragraph
  font-family 'Roboto Condensed', sans-serif
  padding 10px

.login__button
  width 100%
  box-sizing border-box
  padding 20px
  background #82D465;
  text-transform uppercase
  font-weight bold
  transition all 0.2s
  position relative
  z-index 2
  border none
  color white
  &:hover
    cursor pointer
    &:after
      height 100%
  &:after
    content ""
    z-index -1
    display block
    background #5CC437
    position absolute
    width 100%
    height 0
    left 0
    top 0
    -webkit-transition all .2s
    transition all .2s

.logout__button
  float right
  margin 5px
